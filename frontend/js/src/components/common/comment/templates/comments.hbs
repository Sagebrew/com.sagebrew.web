{{#each comment }}
    <div class="block">
        <div class="block-content" style="padding-top: 0; padding-bottom: 0;">
            <small>Author: <a href="{{ profile.url }}">{{ profile.first_name }} {{ profile.last_name }}</a>
                <b>&middot;</b>
                {{ created }} </small>
            <small class="pull-right" style="padding-top: 5px;">
               <i class="fa fa-user-secret" style="margin-right: 10px;"></i>Private
            </small>
        </div>

        {{# if is_owner }}
            <button class="btn dropdown-toggle sb_btn_icon" type="button"
                    data-toggle="dropdown">
                <span class="fa fa-cog sb_btn_icon_green_hover"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right sb_post_dropdown"
                role="menu" aria-labelledby="dropdown-menu">
                <li role="presentation"><a class="sb_post_dropdown_menu show_edit_comment_class"
                                           data-comment_uuid="{{ object_uuid }}"
                                           type="submit">Edit</a>
                </li>
                <li role="presentation" class="sb_divider"></li>

                <li role="presentation">
                    <a class='sb_post_dropdown_menu delete_object-action delete_{{ object_uuid }}'>
                        Delete
                    </a>
                </li>
            </ul>
        {{/if }}
        {{# if can_flag }}
        {{/if }}
    </div>
    <div class="row sb-comment-rows">
        <div class="hidden-xs col-sm-1 sb_vote_wrapper">
            <div class="vote_lg vote_count_large">
                {{> 'common/vote/templates/vote.hbs' id=id restricted=restricted
                is_owner=is_owner has_reputation=has_reputation
                vote_count=vote_count upvote=upvote downvote=downvote type=type
                post=post}}
            </div>
        </div>
        <div class="col-xs-9 col-lg-8 col-xs-offset-1">
            <div class="sb_comment_body{% if is_closed %} sb_blurred_content{% endif %}"
                 id="sb_content_{{ object_uuid }}">
                {{{ html_content }}}
            </div>
            <div id="edit_container_{{ object_uuid }}" style="display: none">
                <div class="row-fluid">
                    <textarea class="form-control edit_comment_input_class" style="resize: vertical;"
                              id="{{ object_uuid }}"
                              name="edit_comment_input"
                              rows="1">{{ content }}</textarea>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-4 col-xs-12 col-lg-offset-7 col-md-offset-7 col-sm-offset-8">
                        <button class='btn btn-block btn-primary sb_btn_fill edit_object-action edit_{{ object_uuid }}'
                           id="edit_comment_button_id_{{ object_uuid }}"
                           data-parent_object="{{ object_uuid }}"
                           data-object_uuid="{{ object_uuid }}"
                           data-created="{{ created }}">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/each}}
