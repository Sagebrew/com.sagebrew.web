<div class="block">
    <h3 class="block-title">Payment Information</h3>
    <div class="block-content settings-list">
        <ul>
            {{#if card_on_file }}
                <li><label>Payment Method</label><i class="fa fa-credit-card" style="padding-left: 5px;"></i>
                    {{ brand }} **** **** **** {{ dynamic_last4 }} Expiration: {{ exp_month }}/{{ exp_year }}</li>
            {{/if}}
            <li><label>Next payment due:</label> {{ next_due_date }}</li>
            <li><label>Amount:</label> ${{ bill_rate }}</li>
        </ul>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-xs-12">
                <button class="btn btn-primary sb_btn sb_btn_fill" id="js-payment-method">
                    {{#if card_on_file }}Change Payment Method{{else}}Add Payment Method{{/if}}
                </button>
            </div>
        </div>
    </div>
</div>