<div class="no-padding-right">
    <label class="checkbox toggle-all"
        for="select_all">
            {{ select_all_statement }}
            <input type="checkbox"
                   value=""
                   name="select_all"
                   id="select_all"
                   data-toggle="checkbox">
    </label>
</div>

<div id="js-select-all">
    {{#each options}}
        <div class="no-padding-right">
            <label class="checkbox"
                for="{{ this.value }}">
                    {{ this.display_name }}
                    <input type="checkbox"
                           value="{{ this.value }}"
                           name="options"
                           id="{{ this.value }}"
                           data-toggle="checkbox">
            </label>
        </div>
    {{/each}}
</div>