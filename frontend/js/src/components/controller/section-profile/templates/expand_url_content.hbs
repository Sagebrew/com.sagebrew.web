{{# if first_url_content.image_viewable }}
<a class="expanded-url-content-wrapper" href="{{ first_url_content.url }}" target="_blank">
    <div class="row sb-post-image-wrapper">
        {{# if first_url_content.is_portrait }}
            <img alt="expanded content image" class="sb-post-image sb-post-image-tall" src="{{ first_url_content.selected_image }}">
        {{ else }}
            <img alt="expanded selected image" class="sb-post-image" src="{{ first_url_content.selected_image }}">
        {{/if}}
    </div>
    <div class="row expanded-url-content-text">
        <h3>{{ first_url_content.title }}</h3>
        <div>{{ first_url_content.description }}</div>
    </div>
</a>
{{/if}}