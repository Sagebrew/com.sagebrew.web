<div class="block-content">
    <table class="table table-striped payment-methods">
        <tbody><tr>
            <th>
                Position Name
            </th>
            <th>
                Created
            </th>
            <th>
                Location
            </th>
            <th>
                User Created
            </th>
            <th>
                Actions
            </th>
        </tr>
        {{#each positions}}
            <tr>
                <td>
                    {{this.name}}
                </td>
                <td>
                    {{this.created}}
                </td>
                <td>
                    {{this.location_name}}
                </td>
                <td>
                    {{this.user_created}}
                </td>
                <td>
                    <a href=""
                       class="sb-action-icon js-verify-position"
                       data-object_uuid="{{this.id}}"
                       data-toggle="tooltip"
                       data-title="Verify Position"
                       data-placement="top">
                        <i class="fa fa-check"></i>
                    </a>
                    <a href="/council/positions/{{this.id}}/edit/"
                       class="js-edit-position"
                       data-object_uuid="{{this.id}}"
                       data-toggle="tooltip"
                       data-title="Edit Position"
                       data-placement="top">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                </td>
            </tr>
        {{ else }}
            <tr>
                <td>
                    No Current Unverified Positions
                </td>
            </tr>
        {{/each}}
    </tbody></table>
</div>